if tweets 
                each tweet in tweets 

                    div(class="card tweet-element")
                        div(class='card-body d-flex flex-column')
                            div(class='d-flex flex-row justify-content-center')
                                img(width="30" height="30" src=tweet.author.avatar)
                                span(class="flex-fill")=tweet.author.username
                                if(editable && (tweet.author._id.toString() === currentUser._id.toString()))
                                    div(class="d-flex flex-row justify-content-center")
                                        button(class="btn btn-primary float-start" tweetid= tweet._id) Edit 
                                        button(class="btn btn-danger  float-end" tweetid=tweet._id) X
                            div=tweet.content 
