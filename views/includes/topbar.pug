    a(class="navbar-brand" href="/")
        img(width="50" height="30" src="/images/twitter.png")
    button(class="navbar-toggler")
        span(class="navbar-toggler-icon")
    div(class="collapse navbar-collapse")
        ul(class="navbar-nav ms-auto")
        if(isAuthenticated)
            li(class="nav-item active")
                a(class="btn btn-info btn-tweet mr-3" href="/tweets/new") Tweet  
            li(class="nav-item active")
                a(class="btn btn-info btn-tweet mr-3" href="/auth/signout") deconnexion  
        else 
            li(class="nav-item active")
                a(class="btn btn-info btn-tweet mr-3" href="/auth/signin/form") Connexion 
            li(class="nav-item active")
                a(class="btn btn-info btn-tweet mr-3" href="/users/signup/form") Inscription 